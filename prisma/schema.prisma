generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cafe {
  id         Int      @id @default(autoincrement())
  name       String
  address    String
  created_at DateTime @default(now())
  updated_at DateTime

  lineup Lineup[]
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  nickname   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  lineup Lineup[]
}

model Lineup {
  id            Int      @id @default(autoincrement())
  image_url     String
  reported_date DateTime // for 1-day uniqueness
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  cafe_id Int
  user_id Int

  cafe Cafe @relation(fields: [cafe_id], references: [id])
  user User @relation(fields: [user_id], references: [id])

  @@unique([user_id, cafe_id, reported_date])
}
