generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cafe {
  id              Int             @id @default(autoincrement())
  name            String
  address         String
  opening_hours   String
  bean_updated_at DateTime?
  created_at      DateTime        @default(now())

  lineupReports   Lineup_report[]
}

model User {
  id         Int             @id @default(autoincrement())
  email      String          @unique
  nickname   String
  role       String
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt

  lineupReports Lineup_report[]
}

model Lineup_report {
  id            Int       @id @default(autoincrement())
  status        String
  image_url     String?
  reported_at   DateTime  @default(now())
  reported_date DateTime  // for 1-day uniqueness

  cafe_id Int
  user_id Int

  cafe    Cafe   @relation(fields: [cafe_id], references: [id])
  user    User   @relation(fields: [user_id], references: [id])

  @@unique([user_id, cafe_id, reported_date])
}